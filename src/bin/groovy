#!/bin/sh

##############################################################################
##                                                                          ##
##  Groovy JVM Bootstrap for UN*X                                           ##
##                                                                          ##
##  use -cp or -classpath just as in java to use a custom classpath         ##
##                                                                          ##
##############################################################################

##
## $Revision$
## $Date$
##

GROOVY_APP_NAME=Groovy

# Resolve links
PRG=$0
while [ -h "$PRG" ] ; do
    ls=`ls -ld "$PRG"`
    link=`expr "$ls" : '.*-> \(.*\)$'`
    if expr "$link" : '.*/.*' > /dev/null; then
        if expr "$link" : '^/' > /dev/null; then
            PRG="$link"
        else
            PRG="`dirname ${PRG}`/${link}"
        fi
    else
        PRG="`dirname $PRG`/$link"
    fi
done

GROOVY_HOME=`dirname "$PRG"`
if [ "GROOVY_HOME" = '.' ] ; then
    cwd=`pwd`
    GROOVY_HOME=`dirname $cwd`
else
    GROOVY_HOME=`dirname "$GROOVY_HOME"`
fi

. "$GROOVY_HOME/bin/startGroovy"

startGroovy groovy.ui.GroovyMain "$@"
